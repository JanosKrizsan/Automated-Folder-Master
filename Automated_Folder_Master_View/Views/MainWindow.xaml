<Window x:Class="Master_View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Master_View.ViewModels"
        xmlns:local="clr-namespace:Master_View"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Window.DataContext>
        <vm:SettingsViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Background" Value="LightPink"/>
        </Style>
        <Style TargetType="{x:Type WrapPanel}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type StackPanel}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="{x:Type CheckBox}">
            <Setter Property="Margin" Value="20, 5"/>
        </Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Margin" Value="4, 8"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Width" Value="80" />
        </Style>
        <Style TargetType="{x:Type ColumnDefinition}">
            <Setter Property="MinWidth" Value="300"/>
            <Setter Property="MaxWidth" Value="600"/>
        </Style>
        <Style TargetType="{x:Type RowDefinition}">
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="MaxHeight" Value="800"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0">
            <StackPanel Margin="0, 20">
                <CheckBox IsThreeState="True">Toggle All</CheckBox>
                <StackPanel Margin="20, 0">
                    <CheckBox>Autostart Folder Master</CheckBox>
                    <CheckBox>Include Folders with Apps</CheckBox>
                    <CheckBox>Delete Folders with Files</CheckBox>
                </StackPanel>
            </StackPanel>
            <StackPanel>
                <WrapPanel>
                    <Button Content="Save Settings"/>
                    <Button Content="Reset Defaults"/>
                    <Button Content="Clear Paths"/>
                    <Button Content="Load Settings"/>
                    <Button Content="Usage Guide"/>
                </WrapPanel>
                <WrapPanel Margin="30">
                    <Label Content="Delete after this many days :"/>
                    <ComboBox/>
                </WrapPanel>
            </StackPanel>


        </StackPanel>
        <ListBox Height="300" Width="300" Margin="157,130,143,154" Grid.ColumnSpan="3" Grid.Column="1" Grid.RowSpan="2">
            <ListBoxItem>Path 1 given</ListBoxItem>
            <ListBoxItem>Path 2 given</ListBoxItem>
            <ListBoxItem>Path 3 given</ListBoxItem>
        </ListBox>
        <TreeView Width="300" Margin="0,10,0,0" Grid.Row="1">
            <TreeViewItem>item 1</TreeViewItem>
            <TreeViewItem>item 2</TreeViewItem>
        </TreeView>

    </Grid>
</Window>
